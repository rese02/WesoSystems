rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /bookings/{bookingId} {
      // Erlaube angemeldeten Benutzern das Lesen und Erstellen.
      // Später kann dies weiter eingeschränkt werden, z.B. nur auf den Hotelbesitzer.
      allow read, write: if request.auth != null;
    }
  }
}
