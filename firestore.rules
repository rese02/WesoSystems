
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Für die Entwicklung: Erlaube Lese- und Schreibzugriff, wenn ein Benutzer authentifiziert ist.
    // In der Produktion sollten diese Regeln verfeinert werden, um z.B. nur dem Hotelier
    // das Ändern bestimmter Felder zu erlauben.
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null;
    }

    // Die Regeln für den Storage sind separat in der Firebase Console zu konfigurieren.
    // Typischerweise würde man hier den Upload nur für authentifizierte Benutzer erlauben
    // und Leserechte feiner steuern.
  }
}
